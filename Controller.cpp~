// Controller.h


#include <iostream>
#include "IO/InputController.h"
#include "Graphics/TextureController.h"
#include "Graphics/ShaderController.h"
#include "Graphics/FontController.h"
#include "Graphics/GraphicsOGL.h"
#include "Environment/Heightmap.h"
#include "Environment/Tree.h"
#include "Characters/Player.h"
using namespace std;

Player* p;
Tree* t;

class Heightmap;
Controller :: Controller(int argc, char* argv[]) {

	gl = new GraphicsOGL(this, argc,argv);
}

Controller :: ~Controller() {
}

void Controller :: initialize(GraphicsOGL* g) {


	fontController = new FontController();
	textureController = new TextureController();
	shaderController = new ShaderController();
	inputController = new InputController();

	curHeightmap = new Heightmap(getTextureController(), 2048,2048,"Resources/Images/test.png");
	p = new Player(1330,1028,0);
	t = new Tree(1350,1028,234);
}

GraphicsOGL* Controller :: getGraphicsOGL() {
	return gl;
}

Heightmap* Controller :: getHeightmap() {
	return curHeightmap;
}
InputController* Controller :: getInputController() {
	return inputController;
}
TextureController* Controller :: getTextureController() {
	return textureController;
}
ShaderController* Controller :: getShaderController() {
	cout << "Get font" << endl;
	return shaderController;
}
FontController* Controller :: getFontController() {
	return fontController;
}
